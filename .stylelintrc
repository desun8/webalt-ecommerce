{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "rules": {
    "unit-no-unknown": [true,
      "ignoreUnits": [
        "x"
      ]
    ],
    "order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-alphabetical-order": null,
    "string-quotes": "double"
  }
}